<p id="notice"><%= notice %></p>

<h1>Listing Todo Items</h1>

<table id= "blah">
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_items.each do |todo_item| %>
      <tr>
        <td><%= todo_item.description %></td>
      </tr>
      <tr>
        <td>
          <%= link_to 'Show', todo_item %>
          <%= link_to 'Edit', edit_todo_item_path(todo_item) %>
          <%= link_to 'Destroy', todo_item, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

